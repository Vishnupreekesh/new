<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"  version="4.0">
  <display-name>userproject</display-name>
   <welcome-file-list>
    <welcome-file>Signin.html</welcome-file>  
  </welcome-file-list> 
  
   <filter>
  <filter-name>filter</filter-name>
  <filter-class>filter.SigninFilter</filter-class>
  </filter>
  
  <filter-mapping>
  <filter-name>filter</filter-name>
  <url-pattern>/*</url-pattern> 
  
  </filter-mapping> 
  
  <servlet>
  <servlet-name>signinform</servlet-name>
  <servlet-class>Servlet.SigninServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>signinform</servlet-name>
  <url-pattern>/Signin</url-pattern>
  </servlet-mapping>  
   
  <servlet>
  <servlet-name>signupform</servlet-name>
  <servlet-class>Servlet.SignupServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>signupform</servlet-name>
  <url-pattern>/Signup</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>changepass</servlet-name>
  <servlet-class>Servlet.ChangePass</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>changepass</servlet-name>
  <url-pattern>/ChangePassword</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>logout</servlet-name>
  <servlet-class>Servlet.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>logout</servlet-name>
  <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>profile</servlet-name>
  <servlet-class>Servlet.Profile</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>profile</servlet-name>
  <url-pattern>/Profile.jsp</url-pattern>
  </servlet-mapping>
 </web-app>


